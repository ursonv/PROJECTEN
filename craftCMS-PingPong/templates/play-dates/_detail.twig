{% extends '_shared/_layout.twig' %}

{% block css %}
  <style>
      .main-content {
      font-family: var(--Ambit-font);
      color: #333;
      padding: 20px;
      margin-bottom: 100px;
      background-color: #f7f9fc;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      max-width: 800px;
      margin: 20px auto;
  }

  h2 {
      font-size: 24px;
      color: #000;
      margin-bottom: 20px;
      border-bottom: 2px solid var(--secondary-red);
      padding-bottom: 10px;
  }

  p {
      font-size: 16px;
      color: #000;
      margin-bottom: 10px;
      line-height: 1.6;
  }

  .info-label {
      font-weight: bold;
      color: #222;
  }

  .button-link {
      display: inline-block;
      padding: 10px 15px;
      background-color: var(--secondary-red);
      color: white;
      text-transform: uppercase;
      font-size: 14px;
      font-weight: bold;
      text-align: center;
      border-radius: 5px;
      text-decoration: none;
      margin-top: 20px;
      transition: background-color 0.3s ease;
  }

  .button-link:hover {
      background-color: #b71c1c;
  }

  .game-detail {
    font-size: 16px;
    color: #47565D;
    display: flex;
    align-items: center; 
    gap: 12px; 
    margin-bottom: 20px;
  }

    .game-detail svg {
        flex-shrink: 0; 
        width: 24px;  
        height: 24px;
    }

  /* Responsive design */
  @media (max-width: 768px) {
      .main-content {
          padding: 15px;
      }

      h2 {
          font-size: 20px;
      }

      p {
          font-size: 14px;
      }

      .button-link {
          padding: 8px 12px;
          font-size: 12px;
      }
  }
  </style>
{% endblock %}

{% block main %}

{% set entry = craft.entries.section('playDates_section').id(id).one() %}

{% embed '_shared/_titleheader.twig' %}
  {% block page_title %}{{ teamType }} Game{% endblock %}
  {% block button_text %}{% endblock %}
  {% block button_link %}{% endblock %}
{% endembed %}

<main class="main-content">
  {% if entry %}
